    "prerelease": "yarn build",
    "release": "standard-version",
    "start": "npm run build -- -w",
    "lint": "eslint 'src/**/*.{j,t}s{,x}'",
    "lint:fix": "eslint --fix 'src/**/*.{j,t}s{,x}'"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.16",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
